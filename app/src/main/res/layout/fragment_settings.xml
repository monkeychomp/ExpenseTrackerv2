
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.mildred.expensetrackerv2.SettingsFragment.SettingsFragment">

    <Button
        android:id="@+id/addAllocationButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:text="@string/addButton"
        android:layout_margin="10dp"/>


   <ListView
    android:layout_width="match_parent"
    android:layout_height="400dp"
    android:id="@+id/allocList"
    android:layout_margin="20dp"
       android:background="@color/darkgreen">

   </ListView>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

   <TextView android:id="@+id/tvtotalPercentLabel"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_marginRight="10dp"
       android:text="@string/total"
       android:textSize="20dp"
       android:textStyle="bold"
       android:layout_marginLeft="250dp"
       />

    <TextView android:id="@+id/tvTotalPercent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:textSize="20dp"
        android:layout_marginRight="10dp"
        />
</LinearLayout>
</LinearLayout>